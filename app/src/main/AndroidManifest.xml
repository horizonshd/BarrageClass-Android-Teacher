<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.horizonshd.www.barrageclassteacher">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="弹幕课堂(教师版)">

        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="弹幕课堂(教师版)">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".RegisterActivity"
            android:label="用户注册">

        </activity>

        <activity
            android:name=".ClassroomActivity"
            android:label="课堂">

        </activity>
        <activity
            android:name=".QuestionLibraryActivity"
            android:label="题库">

        </activity>
        <activity
            android:name=".QuestionDetailActivity"
            android:label="试题详情">

        </activity>
        <activity
            android:name=".AddQuestionByHandActivity"
            android:label="添加试题">

        </activity>
        <activity
            android:name=".AddQuestionFromFileActivity"
            android:label="从文件添加试题">

        </activity>

        <activity
            android:name=".PaperLibraryActivity"
            android:label="试卷库">

        </activity>

        <activity
            android:name=".PaperDetailActivity"
            android:label="试卷详情">

        </activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>